.hero.min-h-screen[style="background-image: url(https://placeimg.com/1000/800/nature);"]
  .hero-overlay.bg-opacity-60
  .hero-content.text-center.text-neutral-content
    .max-w-md.mb-20
      h1.mb-5.text-5xl.font-bold.my-20
        | 予約詳細
      .overflow-x-auto
        table.table.w-full
          thead
            tr.text-center
              th = Reservation.human_attribute_name('reservation_type')
              th = Reservation.human_attribute_name('reservation_datetime')
          tbody
            tr.text-center
              td = @reservation.reservation_type_i18n
              td = I18n.l(@reservation.reservation_datetime, format: :long)
      h1.mb-5.text-4xl.font-bold.my-20
        = Reservation.human_attribute_name('change_and_cancel')
      = form_with model: @reservation, local: true do |f|
        .card.w-96.bg-base-100.shadow-xl
          .card-body
            .form_control
              label.label
                span.label-text
                  = f.label :reservation_type
                = f.select :reservation_type, Reservation.reservation_types_i18n.invert
            .form_control
              label.label
                span.label-text
                  = f.label :reservation_datetime
                = f.datetime_field :reservation_datetime, class: 'input input-bordered', placeholder: ''
            .form_control
              .flex-none
                = button_to t('.change'), reservation_path(@reservation), method: :patch, class: 'btn btn-warning btn-wide'
              .flex-none
                = button_to t('.cancel'), reservation_path, method: :delete, class: 'btn btn-error btn-wide'
